{
  "expo": {
    "name": "Two Truths & a Lie",
    "slug": "two-truths-one-lie-game",
    "version": "1.1.0",
    "orientation": "portrait",
    "icon": "./mobile/assets/app_icon_scaled.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./mobile/assets/app_icon_scaled.png",
      "resizeMode": "contain",
      "backgroundColor": "#4a90e2"
    },
    "assetBundlePatterns": [
      "mobile/assets/**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.kingkw1.twotruths"
    },
    "android": {
      "package": "com.kingkw1.twotruthsoneliegame",
      "adaptiveIcon": {
        "foregroundImage": "./mobile/assets/app_icon_scaled.png",
        "backgroundColor": "#4a90e2"
      },
      "versionCode": 23,
      "permissions": [
        "CAMERA",
        "RECORD_AUDIO",
        "WRITE_EXTERNAL_STORAGE",
        "READ_EXTERNAL_STORAGE"
      ]
    },
    "web": {
      "favicon": "./mobile/assets/app_icon_scaled.png"
    },
    "extra": {
      "eas": {
        "projectId": "7f16a081-e340-4410-84c5-c30352022ead"
      }
    },
    "plugins": [
      "expo-asset",
      "expo-web-browser",
      [
        "expo-build-properties",
        {
          "android": {
            "minifyEnabled": true,
            "shrinkResources": true,
            "proguardFiles": [
              "proguard-android-optimize.txt",
              "mobile/android/app/proguard-rules.pro"
            ]
          }
        }
      ],
      "expo-video"
    ]
  }
}
