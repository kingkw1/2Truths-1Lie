{
  "name": "two-truths-one-lie-game",
  "version": "1.0.0",
  "description": "Two Truths and a Lie game with emotion analysis",
  "main": "mobile/index.ts",
  "scripts": {
    "start": "cd mobile && npx expo start",
    "start:mobile": "cd mobile && expo start",
    "start:backend": "cd backend && python main.py",
    "start:dev": "concurrently \"npm run start:backend\" \"npm run start:mobile\"",
    "demo": "./demo-setup.sh",
    "mobile": "cd mobile && npx expo start --offline",
    "mobile:install": "cd mobile && npm install",
    "sync": "./sync-to-mobile.sh",
    "dev:mobile": "./sync-to-mobile.sh && npm run mobile",
    "android": "cd mobile && expo run:android",
    "ios": "cd mobile && expo run:ios",
    "build:android": "cd mobile && eas build --platform android",
    "build:ios": "cd mobile && eas build --platform ios",
    "test:mobile": "cd mobile && npm test",
    "test:backend": "cd backend && python -m pytest",
    "test:all": "npm run test:mobile && npm run test:backend",
    "lint:mobile": "cd mobile && npx eslint src --ext .ts,.tsx",
    "format:mobile": "cd mobile && npx prettier --write src",
    "type-check:mobile": "cd mobile && npx tsc --noEmit"
  },
  "devDependencies": {
    "@types/babel__core": "^7.20.5",
    "@types/jest": "^27.5.2",
    "@types/node": "^16.18.0",
    "@types/react": "~19.0.10",
    "typescript": "~5.8.3"
  },
  "dependencies": {
    "@expo/metro-runtime": "~5.0.4",
    "@reduxjs/toolkit": "^2.8.2",
    "expo": "53.0.22",
    "expo-dev-client": "~5.2.4",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "react-native": "0.79.5",
    "react-native-web": "^0.20.0",
    "react-redux": "^8.1.0"
  },
  "keywords": [
    "mobile-game",
    "react-native",
    "expo",
    "typescript",
    "emotion-analysis",
    "social"
  ],
  "author": "",
  "license": "MIT"
}
